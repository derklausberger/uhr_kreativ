<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="720.0" prefWidth="1280.0" xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.breakout.ControllerScreens">
    <ImageView fitHeight="720.0" fitWidth="1280.0" pickOnBounds="true" preserveRatio="true">
        <Image url="@Breakout_Main.png"/>
    </ImageView>
    <VBox alignment="CENTER" prefHeight="679.0" prefWidth="1110.0" spacing="10.0" AnchorPane.bottomAnchor="0.0"
          AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <Button mnemonicParsing="false" onAction="#SwitchToLevels" prefHeight="20.0" prefWidth="150.0"
                text="Start"/>
        <Button layoutX="34.0" layoutY="98.0" mnemonicParsing="false"
                onAction="#SwitchToLeveleditor" prefWidth="150.0" text="Level Editor"/> <!--fx:id="lvlEditBtn"-->
        <Button layoutX="34.0" layoutY="110.0" mnemonicParsing="false" onAction="#SwitchToSettings"
                prefWidth="150.0" text="Einstellungen"/>
        <Button layoutX="34.0" layoutY="122.0" mnemonicParsing="false" onAction="#showClockScreen" prefWidth="150.0"
                text="Geheim!"/>
    </VBox>
</AnchorPane>
